stiff_demo
end

function stiff_demo
 
h = 0.1; start = 0; endpoint = 1;
t = start:h:endpoint;
y0 = 2; z0 = 1;
[t,y,z] = IVP_implicit_example(t,y0,z0);
subplot(1,2,1)
    plot(t,[y z])
    xlabel('t')
    ylabel('value of y and z')
    legend('y','z')
    title('implicit method')
    
[t,y,z] = normal(t,y0,z0);
subplot(1,2,2)
    plot(t,[y z])
    xlabel('t')
    ylabel('value of y and z')
    legend('y','z')
    title('explicit method')
    
end

